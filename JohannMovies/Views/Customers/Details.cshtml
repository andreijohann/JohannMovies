@using JohannMovies.ViewModel
@model DetailsCustomerViewModel
@{
    ViewBag.Title = "Customers";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.Customer.Name</h2>

<ul>
    <li>MembershipType: @Model.Customer.MembershipType.Name</li>
    @if (Model.Customer.Birthdate.HasValue)
    {
        <li>Birthdate: @Model.Customer.Birthdate.Value.ToString("dd/MM/yyyy")</li>
    }

</ul>

