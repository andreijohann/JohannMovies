@using JohannMovies.ViewModel
@model DetailsMovieViewModel
@{
    ViewBag.Title = "Movies";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.Movie.Name</h2>

<ul>
    <li>Genre: @Model.Movie.Genre.Name</li>
    <li>Release Date: @Model.Movie.ReleasdDate.ToString("dd/MM/yyyy")</li>
    <li>Date Added: @Model.Movie.DateAdded.ToString("dd/MM/yyyy")</li>
    <li>Number in Stock: @Model.Movie.NumberInStock</li>
</ul>